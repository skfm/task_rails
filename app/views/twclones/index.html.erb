<p id="notice"><%= notice %></p>

<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "ホーム", root_path  %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ツイート", new_twclone_path  %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<body>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ツイート内容</th>
      </tr>
    </thead>
    <tbody class="tbody">
      <% @twclones.each do |twclone| %>
      <tr>
        <td><%= twclone.content %></td>
        <td>
          <div class="btn-group btn-group-xs">
	          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		          <span class="caret"></span>
	          </button>
	            <ul class="dropdown-menu" role="menu">
		            <li role="presentation"><%= link_to 'ツイートの詳細', twclone %></li>
		            <li role="presentation"><%= link_to 'ツイートを編集', edit_twclone_path(twclone) %></li>
		            <li role="presentation"><%= link_to 'ツイートを削除', twclone, method: :delete, data: { confirm: '本当にツイートを削除しますか？' } %></li>
	            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>

<footer>
  <div class="panel panel-default">
    <div class="panel-footer">twitterclone</div>
  </div>
</footer>
